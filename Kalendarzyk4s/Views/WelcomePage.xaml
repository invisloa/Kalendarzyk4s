<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalendarT1.Views.WelcomePage"
             xmlns:customControls="clr-namespace:CalendarT1.Views.CustomControls"
             xmlns:icon="clr-namespace:CalendarT1.Helpers"
             Title="WelcomePage">

    <StackLayout Background="White">

        <Label 
                            Text="{Binding SomeIconToShow.IconName}" 
                            TextColor="{Binding SomeIconToShow.TextColor}" 
                            Style="{StaticResource GoogleFont}" 
                            VerticalOptions="Center" 
                            HorizontalOptions="Start" />



        <Button Text="XXXXXXX" Command="{Binding ButtonClickCommand}"/>
        <ImageButton 
                             CornerRadius="10"
                             Source="logout.png"
                             BackgroundColor="Aquamarine"
                             WidthRequest="40" 
                             HeightRequest="40"
                             Margin="10"
                              />

    </StackLayout>


</ContentPage>